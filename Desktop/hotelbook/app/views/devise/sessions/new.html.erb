<% provide(:titre , "singin") %>
<% provide(:footer , "no") %>

<div id="wrap" class="">
  <div class="container formlogin col-sm-4 col-sm-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>Identification</h4>
      </div>
      <div class="panel-body">
        <div class="row">
        <div>
             <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true , class:"form-control input-lg"%>
            </div>
            <div class="form-group">
              <%= f.label "Mot de passe" %><br />
              <%= f.password_field :password, autocomplete: "off", class:"form-control input-lg" %>
            </div>
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label "Maintenir la connexion" %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Connexion", class:"btn btn-lg btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>

